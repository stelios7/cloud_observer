<UserControl x:Class="cloud_observer.UserControls.StatusControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:cloud_observer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="250">
	<Grid>
		<StackPanel Margin="2" Orientation="Horizontal" Background="Ivory" HorizontalAlignment="Left" >
			<Label x:Name="labelName" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
			<Label x:Name="labelSoftware" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Width="150"/>
			<Label x:Name="labelInfo" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="100" />
			<Ellipse x:Name="elStatus" HorizontalAlignment="Left"  Stroke="Black" VerticalAlignment="Center" Width="30" Height="30" />
		</StackPanel>
	</Grid>
</UserControl>
