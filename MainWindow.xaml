<Window x:Class="cloud_observer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cloud_observer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
		WindowStyle="SingleBorderWindow"
		ResizeMode="NoResize">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions >
		<WrapPanel Grid.Row="0" Orientation="Vertical" x:Name="MainStackPanel" />
		<Grid Grid.Row="1" Background="LightGreen" VerticalAlignment="Bottom">
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
				<Button Content="Clear" Click="ClearWrapPanel_Click" />
				<Label Content="Last update: " />
				<Label x:Name="LastUpdateTimeLabel" Width="100"/>
			</StackPanel>
		</Grid>
	</Grid>
</Window>
